doctype html
html
  head
    title Snallabot Dashboard
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossOrigin="anonymous")
  body
    div(style={padding: "16px 8px"})
      h2 Which league are you connecting?
      form(action="/dashboard/connect" method="POST")
        .input-group
          span.input-group-text EA Access Token (Debug)
          input#access(type="text" name="access_token" class="form-control" value=access_token readonly=true aria-label="EA access token (Debug)")
        .input-group
          span.input-group-text EA Refresh Token (Debug)
          input#refresh(type="text" name="refresh_token" class="form-control" value=refresh_token readonly=true aria-label="EA refresh token (Debug)")
        .input-group
          span.input-group-text EA Token Expiry (Debug)
          input#expiry(type="text" name="expiry" class="form-control" value=`${expiry.getTime()}` readonly=true aria-label="EA token expiry (Debug)")
        .input-group.mb-3
          span.input-group-text EA Console (Debug)
          input#console(type="text" name="console" class="form-control" value=systemConsole readonly=true aria-label="EA Console (Debug)")
        if discord
          .input-group.mb-3
            span.input-group-text Discord League (Debug)
            input#discord(type="text" name="discord" class="form-control" value=discord readonly=true aria-label="Discord League (Debug)")
        .input-group.mb-3
          select#selectLeague(class="form-select" name="selected_league")
            each league in leagues
              option(value=`${league.leagueId}`) #{league.leagueName} - #{league.userTeamName}
        button#submit(type="submit" class="btn btn-primary") Select League 

